{
  "manifest_version": 3,
  "name": "Hotstar Ad Muter",
  "version": "1.1",
  "description": "Mute Hotstar ads",
  "permissions": [
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.hotstar.com/*",
    "*://bifrost-api.hotstar.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "48.png",
    "128": "128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}